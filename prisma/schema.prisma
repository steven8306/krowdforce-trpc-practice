generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name      String
    image     String?

    Employer Employer?
    Employee Employee?
}

model Employer {
    id String @id

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    User User  @relation(fields: [id], references: [id])
    Job  Job[]

    addressId Int
    address   Address @relation(fields: [addressId], references: [id])
}

model Employee {
    id String @id

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    User User @relation(fields: [id], references: [id])

    addressId Int
    address   Address @relation(fields: [addressId], references: [id])
    skills    Skill[]
}

model Address {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    address String
    lat     Float
    lng     Float

    Employer Employer[]
    Employee Employee[]
}

model Job {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    title       String
    description String
    contactInfo String?
    skills      Skill[]

    Employer   Employer @relation(fields: [employerId], references: [id])
    employerId String
}

model Skill {
    name      String     @id
    employees Employee[]
    jobs      Job[]
}
